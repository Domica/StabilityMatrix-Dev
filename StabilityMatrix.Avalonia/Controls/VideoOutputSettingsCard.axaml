<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:controls="using:StabilityMatrix.Avalonia.Controls"
        x:DataType="video:VideoOutputSettingsCardViewModel"
        xmlns:mocks="clr-namespace:StabilityMatrix.Avalonia.DesignData"
        xmlns:video="clr-namespace:StabilityMatrix.Avalonia.ViewModels.Inference.Video"
        xmlns:controls1="clr-namespace:FluentAvalonia.UI.Controls;assembly=FluentAvalonia"
        xmlns:lang="clr-namespace:StabilityMatrix.Avalonia.Languages"
        xmlns:helpers="clr-namespace:StabilityMatrix.Avalonia.Helpers">

    <Design.PreviewWith>
        <Grid MinWidth="400">
            <controls:VideoOutputSettingsCard
                DataContext="{x:Static mocks:DesignData.SvdImgToVidConditioningViewModel}" />
        </Grid>
    </Design.PreviewWith>

    <Style Selector="controls|VideoOutputSettingsCard">
        <Setter Property="HorizontalAlignment" Value="Stretch" />
        <Setter Property="Template">
            <ControlTemplate>
                <controls:Card Padding="8" HorizontalAlignment="{TemplateBinding HorizontalAlignment}">
                    <Grid Margin="4"
                          RowDefinitions="Auto,Auto,Auto,Auto,Auto,Auto,Auto,Auto,Auto"
                          ColumnDefinitions="Auto, *">

                        <!-- Title -->
                        <TextBlock 
                            Grid.Row="0"
                            Grid.Column="0"
                            Grid.ColumnSpan="2"
                            Text="Video Output Settings"
                            FontSize="16"
                            FontWeight="DemiBold"
                            Margin="0,0,0,16" />

                        <!-- FPS -->
                        <TextBlock
                            Grid.Row="1"
                            Grid.Column="0"
                            Margin="0,0,8,0"
                            VerticalAlignment="Center"
                            Text="{x:Static lang:Resources.Label_Fps}" />
                        <controls1:NumberBox
                            Grid.Row="1"
                            Grid.Column="1"
                            SelectionHighlightColor="Transparent"
                            Value="{Binding Fps}"
                            Margin="8,0,0,0"
                            SimpleNumberFormat="F0"
                            SmallChange="1"
                            HorizontalAlignment="Stretch"
                            SpinButtonPlacementMode="Inline" />

                        <!-- Format -->
                        <TextBlock
                            Grid.Row="2"
                            Grid.Column="0"
                            Margin="0,8,8,0"
                            VerticalAlignment="Center"
                            Text="Format" />
                        <ComboBox
                            Grid.Row="2"
                            Grid.Column="1"
                            Margin="8,8,0,0"
                            SelectedItem="{Binding Format}"
                            Items="{x:Static helpers:EnumHelpers.AllVideoFormats}" />

                        <!-- Lossless (WebP only) -->
                        <StackPanel Grid.Row="3"
                                    Grid.Column="0"
                                    Grid.ColumnSpan="2"
                                    Orientation="Horizontal"
                                    IsVisible="{Binding Format, Converter={StaticResource EnumEqualsConverter}, ConverterParameter=WebP}">
                            <TextBlock
                                Margin="0,8,8,0"
                                VerticalAlignment="Center"
                                Text="{x:Static lang:Resources.Label_Lossless}" />
                            <CheckBox
                                IsChecked="{Binding Lossless}"
                                Margin="8,8,0,0"
                                HorizontalAlignment="Stretch" />
                        </StackPanel>

                        <!-- WebP Quality -->
                        <StackPanel Grid.Row="4"
                                    Grid.Column="0"
                                    Grid.ColumnSpan="2"
                                    Orientation="Horizontal"
                                    IsVisible="{Binding Format, Converter={StaticResource EnumEqualsConverter}, ConverterParameter=WebP}">
                            <TextBlock
                                Margin="0,8,8,0"
                                VerticalAlignment="Center"
                                Text="{x:Static lang:Resources.Label_VideoQuality}" />
                            <controls1:NumberBox
                                Margin="8,8,0,0"
                                SelectionHighlightColor="Transparent"
                                Value="{Binding Quality}"
                                SimpleNumberFormat="F0"
                                SmallChange="1"
                                Maximum="100"
                                HorizontalAlignment="Stretch"
                                SpinButtonPlacementMode="Inline" />
                        </StackPanel>

                        <!-- MP4 CRF -->
                        <StackPanel Grid.Row="5"
                                    Grid.Column="0"
                                    Grid.ColumnSpan="2"
                                    Orientation="Horizontal"
                                    IsVisible="{Binding IsMp4}">
                            <TextBlock
                                Margin="0,8,8,0"
                                VerticalAlignment="Center"
                                Text="CRF" />
                            <controls1:NumberBox
                                Margin="8,8,0,0"
                                Value="{Binding Crf}"
                                Minimum="0"
                                Maximum="51"
                                SimpleNumberFormat="F0"
                                SpinButtonPlacementMode="Inline" />
                        </StackPanel>

                        <!-- MP4 Codec -->
                        <StackPanel Grid.Row="6"
                                    Grid.Column="0"
                                    Grid.ColumnSpan="2"
                                    Orientation="Horizontal"
                                    IsVisible="{Binding IsMp4}">
                            <TextBlock
                                Margin="0,8,8,0"
                                VerticalAlignment="Center"
                                Text="Codec" />
                            <ComboBox
                                Margin="8,8,0,0"
                                SelectedItem="{Binding Codec}">
                                <ComboBoxItem Content="libx264" />
                                <ComboBoxItem Content="libx265" />
                            </ComboBox>
                        </StackPanel>

                        <!-- MP4 Container -->
                        <StackPanel Grid.Row="7"
                                    Grid.Column="0"
                                    Grid.ColumnSpan="2"
                                    Orientation="Horizontal"
                                    IsVisible="{Binding IsMp4}">
                            <TextBlock
                                Margin="0,8,8,0"
                                VerticalAlignment="Center"
                                Text="Container" />
                            <ComboBox
                                Margin="8,8,0,0"
                                SelectedItem="{Binding Container}">
                                <ComboBoxItem Content="mp4" />
                                <ComboBoxItem Content="mkv" />
                            </ComboBox>
                        </StackPanel>

                        <!-- MP4 Bitrate -->
                        <StackPanel Grid.Row="8"
                                    Grid.Column="0"
                                    Grid.ColumnSpan="2"
                                    Orientation="Horizontal"
                                    IsVisible="{Binding IsMp4}">
                            <TextBlock
                                Margin="0,8,8,0"
                                VerticalAlignment="Center"
                                Text="Bitrate (kbps)" />
                            <controls1:NumberBox
                                Margin="8,8,0,0"
                                Value="{Binding Bitrate}"
                                Minimum="500"
                                Maximum="50000"
                                SimpleNumberFormat="F0"
                                SpinButtonPlacementMode="Inline" />
                        </StackPanel>

                    </Grid>
                </controls:Card>
            </ControlTemplate>
        </Setter>
    </Style>
</Styles>
